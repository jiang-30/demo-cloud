<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jiang.combo.platform.mapper.DepartmentMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.jiang.combo.platform.entity.Department">
        <id column="id" property="id" />
        <result column="created_time" property="createdTime" />
        <result column="updated_time" property="updatedTime" />
        <result column="created_by" property="createdBy" />
        <result column="updated_by" property="updatedBy" />
        <result column="deleted_flag" property="deletedFlag" />
        <result column="name" property="name" />
        <result column="description" property="description" />
        <result column="sort" property="sort" />
        <result column="status" property="status" />
        <result column="parent_id" property="parentId" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <resultMap id="TreeResultMap" extends="BaseResultMap" type="org.jiang.combo.platform.entity.Department">
        <collection property="children" column="id" select="getTree"></collection>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, created_time, updated_time, created_by, updated_by, deleted_flag, name, description, sort, status, parent_id
    </sql>

    <!-- 通用查询结果列 -->
    <select id="getTree" resultMap="TreeResultMap">
        select
        <include refid="Base_Column_List"></include>
        from s_department
        where
            <if test="pId == null">
                parent_id is null
            </if>
            <if test="pId != null">
                parent_id = #{pId}
            </if>
        order by sort
    </select>
</mapper>
