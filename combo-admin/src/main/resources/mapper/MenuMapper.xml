<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jiang.combo.admin.mapper.MenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.jiang.combo.admin.model.entiry.Menu">
        <id column="id" property="id" />
        <result column="created_time" property="createdTime" />
        <result column="updated_time" property="updatedTime" />
        <result column="created_by" property="createdBy" />
        <result column="updated_by" property="updatedBy" />
        <result column="deleted_flag" property="deletedFlag" />
        <result column="name" property="name" />
        <result column="description" property="description" />
        <result column="icon" property="icon" />
        <result column="path" property="path" />
        <result column="component" property="component" />
        <result column="target" property="target" />
        <result column="type" property="type" />
        <result column="visible" property="visible" />
        <result column="keep_alive" property="keepAlive" />
        <result column="sort" property="sort" />
        <result column="permission" property="permission" />
        <result column="parent_id" property="parentId" />
    </resultMap>

    <!--  -->
    <resultMap id="TreeResultMap" extends="BaseResultMap" type="org.jiang.combo.admin.model.entiry.Menu">
        <collection property="children" ofType="org.jiang.combo.admin.model.entiry.Menu" column="id" select="getTree"></collection>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, created_time, updated_time, created_by, updated_by, deleted_flag, name, description, icon, path, component, target, type, visible, keep_alive, sort, permission, parent_id
    </sql>

    <!--    为角色赋权限-->
    <insert id="insertRoleMenu">
        insert into
            r_role_menu(role_id, menu_id)
        values
            <foreach collection="mIds" item="mId" separator="," >
                (#{rId}, #{mId})
            </foreach>
    </insert>

    <!--    删除角色和权限-->
    <delete id="deleteRoleMenuByRoleId">
        delete
        from r_role_menu
        where role_id = #{id}
    </delete>

    <!--    查询菜单权限树-->
    <select id="getTree" resultMap="TreeResultMap">
        select
            <include refid="Base_Column_List"></include>
        from s_menu
        where
        <if test="pId == null">
            parent_id is null
        </if>
        <if test="pId != null">
            parent_id = #{pId}
        </if>
        order by sort
    </select>


    <select id="getAuthoritiesByRoleIds" resultType="java.lang.String">
        SELECT
            DISTINCT permission
        FROM
            r_role_menu rrm
        LEFT JOIN
            s_menu sm ON  rrm.menu_id = sm.id
        WHERE
            rrm.role_id in
            <foreach collection="rIds" item="rid" open="("  close=")" separator=",">
                #{rid}
            </foreach>
            and permission IS NOT NULL
    </select>

    <select id="selectListByRoleIds" resultType="org.jiang.combo.admin.model.entiry.Menu">
        SELECT
          DISTINCT sm.id as id, created_time, updated_time, created_by, updated_by, deleted_flag, name, description, icon, path, component, target, type, visible, keep_alive, sort, permission, parent_id
        FROM
            r_role_menu rrm
        LEFT JOIN
            s_menu sm ON rrm.menu_id = sm.id
        WHERE
            rrm.role_id in
            <foreach collection="rIds" item="rid" open="("  close=")" separator=",">
                #{rid}
            </foreach>
    </select>

</mapper>
